{
    "printWidth": 100,
    "trailingComma": "all",
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "jsxSingleQuote": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "plugins": ["prettier-plugin-tailwindcss"],
    "tailwindStylesheet": "./app/app.css",
    "tailwindFunctions": [
        "clsx", 
        "cva", 
        "tw"
    ]
}
